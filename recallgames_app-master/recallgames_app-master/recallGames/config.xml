<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="ie.imar.recall" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Recall Games</name>
  <description>
        Project Recall - Games of the past, Sport or today.
  </description>
  <author href="http://imar.ie">
      IMaR team
  </author>
  <content src="index.html"/>
  <access origin="*"/>
  <allow-navigation href="*" />
  <allow-intent href="*"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashScreenDelay" value="3000"/>
  <preference name="BackgroundColor" value="0xffffffff"/>
  <preference name="Orientation" value="portrait" />
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>

    <platform name="android">
    <!-- <icon src="icon.png"/> -->
    <icon src="resources/icon/android/ldpi.png" density="ldpi"/>
    <icon src="resources/icon/android/mdpi.png" density="mdpi"/>
    <icon src="resources/icon/android/hdpi.png" density="hdpi"/>
    <icon src="resources/icon/android/xhdpi.png" density="xhdpi"/>
    <icon src="resources/icon/android/xxhdpi.png" density="xxhdpi"/>
    <icon src="resources/icon/android/xxxhdpi.png" density="xxxhdpi"/>
    
    <!-- <splash src="splash.png" /> -->
    <splash src="resources/screen/android/ldpi-landscape.png" density="land-ldpi"/>
    <splash src="resources/screen/android/mdpi-landscape.png" density="land-mdpi"/>
    <splash src="resources/screen/android/hdpi-landscape.png" density="land-hdpi"/>
    <splash src="resources/screen/android/xhdpi-landscape.png" density="land-xhdpi"/>
    <splash src="resources/screen/android/xxhdpi-landscape.png" density="land-xxhdpi"/>
    <splash src="resources/screen/android/xxxhdpi-landscape.png" density="land-xxxhdpi"/>
    <splash src="resources/screen/android/ldpi-portrait.png" density="port-ldpi"/>
    <splash src="resources/screen/android/mdpi-portrait.png" density="port-mdpi"/>
    <splash src="resources/screen/android/hdpi-portrait.png" density="port-hdpi"/>
    <splash src="resources/screen/android/xhdpi-portrait.png" density="port-xhdpi"/>
    <splash src="resources/screen/android/xxhdpi-portrait.png" density="port-xxhdpi"/>
    <splash src="resources/screen/android/xxxhdpi-portrait.png" density="port-xxxhdpi"/>
  </platform>

  <platform name="ios">
   <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->
    <icon src="resources/icon/ios/icon-60_3x.png" width="180" height="180" />
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="resources/icon/ios/icon-60.png" width="60" height="60" />
    <icon src="resources/icon/ios/icon-60_2x.png" width="120" height="120" />
    <!-- iPad -->
    <icon src="resources/icon/ios/icon-76.png" width="76" height="76" />
    <icon src="resources/icon/ios/icon-76_2x.png" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="resources/icon/ios/icon-40.png" width="40" height="40" />
    <icon src="resources/icon/ios/icon-40_2x.png" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon src="resources/icon/ios/icon.png" width="57" height="57" />
    <icon src="resources/icon/ios/icon_2x.png" width="114" height="114" />
    <!-- iPad -->
    <icon src="resources/icon/ios/icon-72.png" width="72" height="72" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="resources/icon/ios/icon-small.png" width="29" height="29" />
    <icon src="resources/icon/ios/icon-small_2x.png" width="58" height="58" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="resources/icon/ios/icon-50.png" width="50" height="50" />
    <icon src="resources/icon/ios/icon-50_2x.png" width="100" height="100" />
    
    <!-- <splash src="splash.png" /> -->
      <!-- images are determined by width and height. The following are supported -->
    <splash src="resources/screen/ios/Default.png" width="320" height="480"/>
    <splash src="resources/screen/ios/Default_2x.png" width="640" height="960"/>
    <splash src="resources/screen/ios/Default-Portrait.png" width="768" height="1024"/>
    <splash src="resources/screen/ios/Default-Portrait_2x.png" width="1536" height="2048"/>
    <splash src="resources/screen/ios/Default-Landscape.png" width="1024" height="768"/>
    <splash src="resources/screen/ios/Default-Landscape_2x.png" width="2048" height="1536"/>
    <splash src="resources/screen/ios/Default-568h_2x.png" width="640" height="1136"/>
    <splash src="resources/screen/ios/Default-667h_2x.png" width="750" height="1334"/>
    <splash src="resources/screen/ios/Default-Portrait-736h_3x.png" width="1242" height="2208"/>
    <splash src="resources/screen/ios/Default-Landscape-736h_3x.png" width="2208" height="1242"/>
  </platform>

</widget>